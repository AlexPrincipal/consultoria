/**
 * @fileoverview Firestore Security Rules for CMXS Jur√≠dico.
 *
 * Core Philosophy:
 * This ruleset enforces an admin-only access model for managing homepage content.
 * Administrative privileges are determined by the existence of a document in the `/roles_admin/{userId}` collection.
 *
 * Data Structure:
 * - `/homePageContent/{homePageId}`: Stores the content for the homepage.
 * - `/pageContent/{pageId}`: Stores content for other static pages.
 * - `/roles_admin/{userId}`: Indicates admin status.
 *
 * Key Security Decisions:
 * - Only authenticated admins can create, update, or delete content.
 * - Any user (authenticated or not) can read the content.
 * - The rules explicitly deny write access to the `/roles_admin` collection to prevent privilege escalation.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is an admin.
     * @return {boolean} True if the user is an admin, false otherwise.
     */
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Rules for the `/homePageContent/{homePageId}` collection.
     */
    match /homePageContent/{homePageId} {
      allow get: if true;
      allow list: if true;
      allow write: if isSignedIn() && isAdmin();
    }
    
    /**
     * @description Rules for the `/pageContent/{pageId}` collection.
     */
    match /pageContent/{pageId} {
      allow get: if true;
      allow list: if true;
      allow write: if isSignedIn() && isAdmin();
    }

    /**
     * @description Rules for the `/roles_admin/{userId}` collection.
     */
    match /roles_admin/{userId} {
      allow read: if false;
      allow write: if false;
    }
  }
}
