
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if the user's UID exists in the admin roles collection.
    function isExistingAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // An admin is someone who is signed in AND is a registered admin.
    function isAdmin() {
      return isSignedIn() && isExistingAdmin();
    }

    match /homePageContent/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /pageContent/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /teamMembers/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Admin roles document should only be manageable from the Firebase Console
    // for security reasons. Nobody can write to it from the client-side app.
    match /roles_admin/{userId} {
      allow read, write: if false; 
    }
  }
}
