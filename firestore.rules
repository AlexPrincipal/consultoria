
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Lista de emails que son admin - SOLUCIÓN ROBUSTA
    function isAdminEmail() {
      return isSignedIn() && request.auth.token.email in [
        'alex@gmail.com',
        'admin@example.com'
      ];
    }
    
    // Verificación combinada: email admin O existe en roles_admin
    function isAdmin() {
      return isAdminEmail() || (isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    match /homePageContent/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /pageContent/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /content/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /teamMembers/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Permitir que los admin gestionen roles
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
