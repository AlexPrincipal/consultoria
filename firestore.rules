
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if the user's UID exists in the admin roles collection.
    function isExistingAdmin() {
      // Important: Ensure request.auth is not null before trying to access .uid
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // An admin is someone who is signed in AND is a registered admin.
    function isAdmin() {
      return isExistingAdmin();
    }

    match /homePageContent/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /pageContent/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /teamMembers/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // This rule allows an admin to assign another user (or themselves) an admin role.
    // It's secure because only an existing admin can perform this write.
    // It allows any signed-in user (including anonymous) to read the roles collection,
    // which is necessary for the client-side logic to check if a user is an admin.
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(); 
    }
  }
}
